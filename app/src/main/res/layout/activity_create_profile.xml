<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".activities.CreateProfileActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorWhite"
        android:visibility="gone"
        app:liftOnScroll="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_create_profile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ToolbarColoredBackArrow"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:subtitleTextAppearance="@style/ToolbarSubtitleAppearance"
            app:titleTextAppearance="@style/ToolbarTitleAppearance"
            app:titleTextColor="@color/primaryTextColor" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_32"
                android:fontFamily="@font/roboto_bold"
                android:text="Create Profile"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/font_22" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_24"
                android:src="@color/primaryTextColor" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_32"
                android:text="Fullname"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/font_16" />

            <EditText
                android:id="@+id/edt_fullname_create_profile"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_16"
                android:background="@drawable/edit_text_background_style"
                android:enabled="false"
                android:hint="Fullname"
                android:paddingLeft="@dimen/padding_12"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/font_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:text="Email"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/font_16" />

            <EditText
                android:id="@+id/edt_email_create_profile"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_16"
                android:background="@drawable/edit_text_background_style"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/padding_12"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/font_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:text="Mobile number"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/font_16" />

            <EditText
                android:id="@+id/edt_mobile_create_profile"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_16"
                android:background="@drawable/edit_text_background_style"
                android:enabled="false"
                android:hint="Mobile number"
                android:paddingLeft="@dimen/padding_12"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/font_16" />

            <LinearLayout
                android:id="@+id/ll_dr_dept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_16"
                    android:text="Department"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="@dimen/font_16" />

                <EditText
                    android:id="@+id/edt_dept_create_profile"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginRight="@dimen/margin_16"
                    android:background="@drawable/edit_text_background_style"
                    android:enabled="false"
                    android:hint="Department"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="@dimen/padding_12"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/font_16" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:text="Gender"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/font_16" />

            <RadioGroup
                android:id="@+id/rg_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_16"
                android:orientation="horizontal"
                android:weightSum="3">

                <RadioButton
                    android:id="@+id/rb_gender_male"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male"
                    android:textSize="@dimen/font_14" />

                <RadioButton
                    android:id="@+id/rb_gender_female"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female"
                    android:textSize="@dimen/font_14" />

                <RadioButton
                    android:id="@+id/rb_gender_others"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Others"
                    android:textSize="@dimen/font_14" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/ll_age_and_blood_grp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_16"
                        android:layout_marginTop="@dimen/margin_16"
                        android:text="Age"
                        android:textColor="@color/secondaryTextColor"
                        android:textSize="@dimen/font_16" />

                    <EditText
                        android:id="@+id/edt_age_create_profile"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="@dimen/margin_16"
                        android:layout_marginTop="@dimen/margin_8"
                        android:layout_marginRight="@dimen/margin_16"
                        android:background="@drawable/edit_text_background_style"
                        android:hint="Age"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="@dimen/padding_12"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="@dimen/font_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_16"
                        android:layout_marginTop="@dimen/margin_16"
                        android:text="Blood group"
                        android:textColor="@color/secondaryTextColor"
                        android:textSize="@dimen/font_16" />

                    <EditText
                        android:id="@+id/edt_blood_group_create_profile"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="@dimen/margin_16"
                        android:layout_marginTop="@dimen/margin_8"
                        android:layout_marginRight="@dimen/margin_16"
                        android:background="@drawable/edit_text_background_style"
                        android:hint="Blood group"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="@dimen/padding_12"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="@dimen/font_16" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:text="Address"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/font_16" />

            <EditText
                android:id="@+id/edt_address_create_profile"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_16"
                android:background="@drawable/edit_text_background_style"
                android:hint="Address"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/padding_12"
                android:textAlignment="textStart"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/font_16" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_create_profile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/material_button_height"
                android:layout_margin="@dimen/margin_16"
                android:text="Create profile"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_16" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>