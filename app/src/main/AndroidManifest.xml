<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bijumondal.doctorhealthcare">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.HospitalListActivity"></activity>
        <activity android:name=".activities.CreateDoctorProfileActivity" />
        <activity android:name=".activities.DoctorListActivity" />
        <activity android:name=".activities.DoctorDepartmentActivity" />
        <activity android:name=".activities.UpdateDoctorProfileActivity" />
        <activity android:name=".activities.UpdatePatientProfileActivity" />
        <activity android:name=".activities.MyPrescriptionsActivity" />
        <activity android:name=".activities.DoctorProfileActivity" />
        <activity android:name=".activities.MyAppointmentsActivity" />
        <activity android:name=".activities.PatientProfileActivity" />
        <activity android:name=".activities.CreateProfileActivity" />
        <activity
            android:name=".activities.RegisterActivity"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".activities.WelcomeActivity"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/FullScreenTheme" />
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
    </application>

</manifest>